{
  "name": "base-ignore",
  "description": "Adds an `.ignore` method that parses `.gitignore` and converts the patterns from wildmatch to glob patterns, so they can then be passed to glob, minimatch, micromatch, gulp.src, glob-stream, etc",
  "version": "0.2.0",
  "homepage": "https://github.com/node-base/base-ignore",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "node-base/base-ignore",
  "bugs": {
    "url": "https://github.com/node-base/base-ignore/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "utils.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "arr-union": "^3.1.0",
    "debug": "^2.2.0",
    "fs-exists-sync": "^0.1.0",
    "lazy-cache": "^1.0.3",
    "mixin-deep": "^1.1.3",
    "parse-gitignore": "^0.2.0"
  },
  "devDependencies": {
    "base": "^0.8.1",
    "gulp-format-md": "^0.1.7",
    "micromatch": "^2.3.7",
    "mocha": "^2.4.5"
  },
  "keywords": [
    "base",
    "baseplugin",
    "exclude",
    "exclusion",
    "file",
    "git",
    "gitignore",
    "glob",
    "ignore",
    "inverse",
    "match",
    "negate",
    "negation",
    "negative",
    "parse",
    "pattern",
    "remove",
    "subtractive",
    "wildmatch"
  ],
  "verb": {
    "plugins": [
      "gulp-format-md"
    ],
    "reflinks": [
      "update",
      "verb"
    ],
    "related": {
      "list": [
        "base",
        "base-fs"
      ]
    },
    "run": true,
    "toc": false,
    "layout": "default",
    "lint": {
      "reflinks": true
    },
    "tasks": [
      "readme"
    ]
  }
}
